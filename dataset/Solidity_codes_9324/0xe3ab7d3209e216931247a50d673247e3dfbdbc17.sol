        require(lastUpdate[msg.sender] < LAST_EPOCH, "PAST_LAST_EPOCH");
        uint256 claimableReward = rewards[msg.sender] + _calculateRewards(msg.sender);
        require(claimableReward > 0, "NOTHING_TO_CLAIM");
