        string memory _qtyToStr = Strings.toString(_qty);
        string memory _ownerAddressToStr = Strings.toHexString(uint256(uint160(_owner)), 20);
        
        return string(abi.encodePacked(_qtyToStr,_ownerAddressToStr));
    }

