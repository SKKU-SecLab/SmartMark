contract StrategyTRUTusdV1 is StrategyBase {
    address public constant tusd = 0x0000000000085d4780B73119b644AE5ecd22b376;

    address public constant trueFiPool = 0x97cE06c3e3D027715b2d6C22e67D5096000072E5;
    address public constant stakingFarm = 0xec6c3FD795D6e6f202825Ddb56E01b3c128b0b10;
    address public constant rewardToken = 0x4C19596f5aAfF459fA38B0f7eD92F11AE6543784; //TRU
    address[] public trueFiTokens;

    uint256 public maxSlip = 9990;

    constructor(
        address _governance,
        address _strategist,
        address _controller,
        address _timelock
    )
        public StrategyBase(tusd, _governance, _strategist, _controller, _timelock)
    {		        
        IERC20(tusd).safeApprove(trueFiPool, uint256(-1));
        IERC20(trueFiPool).safeApprove(stakingFarm, uint256(-1));
        
        trueFiTokens = new address[](1);
        trueFiTokens[0] = trueFiPool;
    }

    function setMaxSlip(uint256 _maxSlip) public onlyBenevolent{
        maxSlip = _maxSlip;
    }
	
	
    function deposit() public override {
        uint256 _wantAmt = IERC20(want).balanceOf(address(this));
        require(_wantAmt > 0, "_wantAmt");

        TrueFiPool(trueFiPool).join(_wantAmt);
        uint256 _lpAmount = IERC20(trueFiPool).balanceOf(address(this));

        require(_lpAmount > 0, "!_lpAmount");
        TrueFarm(stakingFarm).stake(trueFiPool, _lpAmount);
    }
	
    function _withdrawSome(uint256 _amount) internal override returns (uint256) {
        if (_amount == 0){
            return 0;
        }

        uint256 _poolSlip = TrueFiPool(trueFiPool).liquidExitPenalty(_amount);
        require(_poolSlip >= maxSlip, "!maxSlip");

        uint256 _beforeWant = IERC20(want).balanceOf(address(this));

        uint256 poolValue = TrueFiPool(trueFiPool).poolValue();
        uint256 totalSupply = TrueFiPool(trueFiPool).totalSupply();
        uint256 _withdrawAmt = _amount.mul(totalSupply).div(poolValue);

        uint256 _totalStaked = TrueFarm(stakingFarm).staked(trueFiPool, address(this));

        _withdrawAmt  = _withdrawAmt > _totalStaked ? _totalStaked : _withdrawAmt;

        TrueFarm(stakingFarm).unstake(trueFiPool, _withdrawAmt);
        uint256 _lpAmount = IERC20(trueFiPool).balanceOf(address(this));

        TrueFiPool(trueFiPool).liquidExit(_lpAmount);

        uint256 _afterWant = IERC20(want).balanceOf(address(this));

        return _afterWant.sub(_beforeWant);
    }

    function withdraw(IERC20 _asset) external override returns (uint256 balance) {
        require(address(_asset) != want, 'wantToken');
        require(address(_asset) != trueFiPool, 'tfToken');
        balance = _withdrawNonWantAsset(_asset);
    }
	
    function _convertWantToBuyback(uint256 _lpAmount) internal override returns (address, uint256){
        require(_lpAmount > 0, '!_lpAmount');
        return (want, _lpAmount);
    }

    function harvest() public override onlyBenignCallers {

        TrueFarm(stakingFarm).claim(trueFiTokens);
		
        uint256 _reward = IERC20(rewardToken).balanceOf(address(this));

        if (_reward > 0) {
            _swapUniswap(rewardToken, want, _reward); // TRU -> TUSD
            uint256 _wantAmount = IERC20(want).balanceOf(address(this));

            uint256 _buybackLpAmount = _wantAmount.mul(performanceFee).div(performanceMax);
            if (buybackEnabled == true && _buybackLpAmount > 0){
                (address _buybackPrinciple, uint256 _buybackAmount) = _convertWantToBuyback(_buybackLpAmount);
                buybackAndNotify(_buybackPrinciple, _buybackAmount);
            }

            lastHarvestBlock = block.number;
            lastHarvestInWant = IERC20(want).balanceOf(address(this));
            deposit();
        }
    }

    function balanceOfPool() public override view returns (uint256){
        uint256 _lpAmount = TrueFarm(stakingFarm).staked(trueFiPool, address(this));
        uint256 poolValue = TrueFiPool(trueFiPool).poolValue();
        uint256 totalSupply = TrueFiPool(trueFiPool).totalSupply();

        return _lpAmount.mul(poolValue).div(totalSupply);
    }

    function getHarvestable() external view returns (uint256) {
        return TrueFarm(stakingFarm).claimable(trueFiPool, address(this)); //TRU rewards
    }
	
    function getName() external override pure returns (string memory) {
        return "StrategyTRUTusdV1";
    }
}