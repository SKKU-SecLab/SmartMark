        if (reward > 0) {
            token.mint(bank, (reward >= 20) ? reward * 5 / 100 : 1); // dev reward 5%
            token.mint(address(this), reward);
            token.safeTransfer(msg.sender, reward);
        }
    }

    function setReward(uint256 _rarity, uint256 _reward) external onlyOwner {
        rewardsPerBlock[_rarity] = _reward;
        emit RewardSet(_rarity, _reward);
    }

    function pendingMilk(uint256 _tokenId)
        public
        view
        returns (uint256 milk)
    {
        ICowRegistry.Creature memory _data = registry.get(_tokenId);

        if (_data.gender != ICowRegistry.Gender.FEMALE) {
            return milk;
        }

        uint256 lastRewardAt = lastReward[_tokenId];
        uint256 blockDiff;
        if (lastRewardAt == 0) {
            blockDiff = block.number - nft.createdAtBlock(_tokenId);
            milk = rewardsPerBlock[_data.rarity] * blockDiff;
        } else {
            blockDiff = block.number - lastRewardAt;
            milk = rewardsPerBlock[_data.rarity] * blockDiff;
        }
    }

    function pendingMilkBatch(uint256[] memory _tokenIds)
        public
        view
        returns (uint256 milk)
    {
        ICowRegistry.Creature memory _data;
        uint256 len = _tokenIds.length;
        uint256 lastRewardAt;
        for (uint i; i < len; i++) {
            _data = registry.get(_tokenIds[i]);
            if (_data.gender == ICowRegistry.Gender.FEMALE) {
                lastRewardAt = lastReward[_tokenIds[i]];
                if (lastRewardAt == 0) {
                    milk += rewardsPerBlock[_data.rarity] * (block.number - nft.createdAtBlock(_tokenIds[i]));
                } else {
                    milk += rewardsPerBlock[_data.rarity] * (block.number - lastRewardAt);
                }
            }
        }
    }

    function countBlockReward(uint256 _weis, uint256 _blocks)
        public
        pure
        returns (uint256 reward)
    {
        reward = _weis / _blocks;
    }
