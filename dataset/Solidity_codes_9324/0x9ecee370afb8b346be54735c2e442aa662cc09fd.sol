pragma solidity 0.6.12;


contract MaintainersRegistry is Initializable {

    using SafeMath for uint;

    mapping(address => bool) _isMaintainer;

    address[] public allMaintainers;

    address public tokensFarmCongress;

    event MaintainerStatusChanged(
        address indexed maintainer,
        bool indexed isMember
    );

    function initialize(
        address[] memory _maintainers,
        address _tokensFarmCongress
    )
        external
        initializer
    {

        require(
            _tokensFarmCongress != address(0x0),
            "tokensFarmCongress can not be 0x0 address"
        );

        tokensFarmCongress = _tokensFarmCongress;

        for(uint i = 0; i < _maintainers.length; i++) {
            addMaintainerInternal(_maintainers[i]);
        }
    }

    function addMaintainer(
        address _address
    )
        external
    {

        require(msg.sender == tokensFarmCongress, "MaintainersRegistry :: Only congress can add maintainer");
        require(_address != address(0x0), "Maintainer can not be 0x0 address");

        addMaintainerInternal(_address);
    }

    function addMaintainerInternal(
        address _address
    )
        internal
    {

        require(!_isMaintainer[_address], "Maintainer already exists");

        allMaintainers.push(_address);
        _isMaintainer[_address] = true;

        emit MaintainerStatusChanged(_address, true);
    }

    function removeMaintainer(
        address _maintainer
    )
        external
    {

        require(msg.sender == tokensFarmCongress, "MaintainersRegistry :: Only congress can remove maintainer");
        require(_isMaintainer[_maintainer], "Maintainer does not exists");

        uint length = allMaintainers.length;

        uint i = 0;

        while(allMaintainers[i] != _maintainer){
            if(i == length){
                revert();
            }
            i++;
        }

        allMaintainers[i] = allMaintainers[length - 1];

        allMaintainers.pop();

        _isMaintainer[_maintainer] = false;

        emit MaintainerStatusChanged(_maintainer, false);
    }


    function isMaintainer(address _address)
        external
        view
        returns (bool)
    {

        return _isMaintainer[_address];
    }
}